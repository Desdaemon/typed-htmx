{
	"include": [
		"src/**/*"
	],
	"compilerOptions": {
		"target": "ES2018",
		"module": "Node16",
		"moduleResolution": "Node16",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"lib": [
			"ES2018",
			"DOM"
		],
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true
	}
}